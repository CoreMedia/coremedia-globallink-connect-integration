<?xml version="1.0" encoding="UTF-8" ?>
<CMSettings folder="/Settings/Options/Settings/Translation Services" name="GlobalLink">
  <settings>
    <Struct xmlns="http://www.coremedia.com/2008/struct">
      <StructProperty Name="globalLink">
        <Struct>
          <StringProperty Name="url">https://stg-glconnect.transperfect.com/rest-api/v3</StringProperty>
          <StringProperty Name="key">Your Connector Key</StringProperty>
          <StringProperty Name="fileType">xliff</StringProperty>
          <IntProperty Name="dayOffsetForDueDate">20</IntProperty>
          <StringProperty Name="type">mock</StringProperty>
          <IntProperty Name="retryCommunicationErrors">5</IntProperty>
          <StructProperty Name="additionalConfigurationOptions">
            <Struct>
              <StringProperty
                Name="comment"><![CDATA[Copy & Paste: Additional configuration options for the GlobalLink exchange facade for reference (add to `globalLink` struct to use and to override system-level configuration).]]></StringProperty>
              <StructProperty Name="exampleKeys">
                <Struct>
                  <StringProperty
                    Name="comment"><![CDATA[Place to possibly store relevant `key` values for later use.]]></StringProperty>
                </Struct>
              </StructProperty>
              <StructProperty Name="availableTypes">
                <Struct>
                  <StringProperty
                    Name="default"><![CDATA[Use GCC Facade (same as unset).]]></StringProperty>
                  <StringProperty
                    Name="disabled"><![CDATA[Meant to temporarily turn off GCC communication.]]></StringProperty>
                  <StringProperty
                    Name="mock"><![CDATA[Meant for testing locally, providing options to further control the behavior by `mock` settings.]]></StringProperty>
                </Struct>
              </StructProperty>
              <StringProperty
                Name="apiKey"><![CDATA[Your API Key; for security reasons should be set at system-level in production use.]]></StringProperty>
              <BooleanProperty Name="isSendSubmitter">true</BooleanProperty>
              <StringProperty Name="sendTranslationRequestRetryDelay">1m</StringProperty>
              <StringProperty Name="downloadTranslationRetryDelay">3m</StringProperty>
              <StringProperty Name="downloadTranslationEarlyRetryDelay">1m</StringProperty>
              <StringProperty Name="cancelTranslationRetryDelay">1m</StringProperty>
              <StructProperty Name="submissionInstruction">
                <Struct>
                  <StringProperty
                    Name="comment"><![CDATA[Submission instruction behavior for GlobalLink.]]></StringProperty>
                  <StringProperty Name="characterType">bmp</StringProperty>
                  <StringProperty Name="characterReplacementStrategy">unicode-code-point</StringProperty>
                  <StringProperty Name="textTransform">text-to-html</StringProperty>
                </Struct>
              </StructProperty>
              <StructProperty Name="submissionName">
                <Struct>
                  <StringProperty
                    Name="comment"><![CDATA[Submission name behavior for GlobalLink.]]></StringProperty>
                  <StringProperty Name="characterType">bmp</StringProperty>
                  <StringProperty Name="characterReplacementStrategy">underscore</StringProperty>
                </Struct>
              </StructProperty>
            </Struct>
          </StructProperty>
          <StructProperty Name="mock">
            <Struct>
              <StringProperty
                Name="comment"><![CDATA[Configuration for the mock implementation of the GlobalLink exchange facade (type=mock).]]></StringProperty>
              <IntProperty Name="stateChangeDelaySeconds">10</IntProperty>
              <IntProperty Name="stateChangeDelayOffsetPercentage">0</IntProperty>
              <StringProperty Name="scenario"/>
              <StructProperty Name="scenarios">
                <Struct>
                  <StringProperty
                    Name="cancelation-not-found"><![CDATA[Simulates a submission not found error on cancelation.]]></StringProperty>
                  <StringProperty
                    Name="full-regular-approval-state-flow"><![CDATA[Simulates a submission that passes all regular states, including approval states.]]></StringProperty>
                  <StringProperty
                    Name="gcc-outage-on-cancelation"><![CDATA[Simulates a permanent GCC connection outage on cancelation.]]></StringProperty>
                  <StringProperty
                    Name="gcc-outage-on-download"><![CDATA[Simulates a permanent GCC connection outage on XLIFF download.]]></StringProperty>
                  <StringProperty
                    Name="gcc-outage-on-upload"><![CDATA[Simulates a permanent GCC connection outage on XLIFF upload.]]></StringProperty>
                  <StringProperty
                    Name="submission-error"><![CDATA[Simulates a submission that reaches the (unrecoverable) error state at GCC.]]></StringProperty>
                  <StringProperty
                    Name="submission-canceled-by-globallink"><![CDATA[Simulates a submission that got canceled via GCC backend.]]></StringProperty>
                  <StringProperty
                    Name="submission-redelivered"><![CDATA[Simulates a typical redelivered scenario, with first corrupted XLIFF, then signalling redelivered state.]]></StringProperty>
                  <StringProperty
                    Name="translate-invalid-xliff"><![CDATA[Simulates a permanently corrupted XLIFF shipped by GCC.]]></StringProperty>
                  <StringProperty
                    Name="translate-string-too-long"><![CDATA[Simulates a translation with long strings returned to provoke a string-too-long failure.]]></StringProperty>
                </Struct>
              </StructProperty>
            </Struct>
          </StructProperty>
        </Struct>
      </StructProperty>
    </Struct>
  </settings>
</CMSettings>
